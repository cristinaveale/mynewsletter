<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head %>
  </head>
  <body class="container">
    <header><% include ./partials/header %></header>

    <main>
      <div class="row">
        <div class="col-sm-8">
          <div><% include ./partials/greeting %></div>
        </div>

        <div class="col-sm-4">
          <div class="well"><h3>My c00l Subscribers:</h3></div>
          <ul>
              <% subscribers.forEach(function(subscriber) { %>
                  <li>
                    <a href="/subscriber/<%= subscriber.id %>">
                      <%= subscriber.first_name %> <%= subscriber.last_name %>
                    </a>
                  </li>
              <% }); %>
          </ul>
        </div>
      </div>
    </main>

    <footer><% include ./partials/footer %></footer>
  </body>
</html>
